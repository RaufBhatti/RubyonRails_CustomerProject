<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    
    <%= form.text_field :first_name, class:"form-control",placeholder:"First Name" %>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :last_name, class:"form-control",placeholder:"Last Name"%>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :email, class:"form-control",placeholder:"Email Address"%>
  </div>

  <div class="field form-group">
    
    <%= form.text_field :phone, class:"form-control",placeholder:"Phone Number"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :address, class:"form-control",placeholder:"Address"%>
  </div>
   
  <div class="field form-group">  
    <%= form.number_field :user_id, id: :customer_user_id, type: :hidden, class:"form-control",value:current_user.id %>
  </div>
  <div class="actions">
    <%= form.submit class:"btn btn-info" %>
  </div>

<% end %>
